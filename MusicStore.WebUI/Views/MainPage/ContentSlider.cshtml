@using MusicStore.Domain.Entities

@model IEnumerable<slides>

<div id="slideshow" class="carousel slide" data-ride="carousel" style="height:340px;"> 
    <div class="carousel-inner content_slider" role="listbox">
        @{
            var i = 0;
            foreach (var slide in Model)
            {
                var itemClass = "";
                if (i++ == 0)
                {
                    itemClass = "item active";
                }
                else
                {
                    itemClass = "item";
                }
                               
                <div class="@itemClass no_pading" >
                    <div style="height:inherit;">
                        <img class="center-block" src="@slide.Image_path" height="300">
                    </div>  
                    <div class="carousel-caption no_pading" style="top:20px;" >
                        <h3 class="text-right text-danger">@slide.Caption</h3>
                        <p>@slide.Text</p>
                        <div class="" style="position:absolute; bottom:20px; right:20px;">
                            <a class="btn btn-lg btn-primary" href="@Url.Action("Index", "Product", new {Id = slide.Prod_id })">Подробнее</a>
                        </div>
                    </div>
                    
                </div>
            }
        }
        <div class="well">
            <ol class=" carousel-indicators li">
                <li data-target="#slideshow" data-slide-to="0" class="active"></li>
                <li data-target="#slideshow" data-slide-to="1"></li>
                <li data-target="#slideshow" data-slide-to="2"></li>
            </ol>
        </div>
        
    </div>  

    <!-- Стрелки -->
    <a class="carousel-control left" href="#slideshow" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="carousel-control right" href="#slideshow" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>