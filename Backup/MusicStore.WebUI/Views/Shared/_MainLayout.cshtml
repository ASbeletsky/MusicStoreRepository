@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset ="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap.css" rel="stylesheet"/>
    <link href="~/Content/Style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.3.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-2.1.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    <title>MusicStore</title>
</head>
<body>
    <!--Заголовок-->
    @Html.Partial("Header")
    <br />
    <!--Страница--> 
    <div class="container-fluid my_page">
        <div class="row ">
            <!--Меню-->
            <div class="col-lg-2 col-md-3">              
                @Html.Action("Menu", "Nav")
            </div>
            <!--Основной контент--> 
            <div class="col-xs-9 ">                            
                <div id="MainWrap" class="row">
                    @RenderBody()
                </div>                
            </div>
        </div>
    </div>
    <!--LogIn Modal-->
    <div class="modal fade" id="LoginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @Html.Action("LogIn", "Authorization", new { returnUrl = "" })
            </div>
        </div>
    </div>
    <!--Register Modal-->
    <div class="modal fade" id="RegisterModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @Html.Action("Register", "Authorization")
            </div>
        </div>
    </div>
</body>
</html>
